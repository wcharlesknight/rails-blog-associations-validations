<%= form_for @post do |f| %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.collection_check_boxes :tags_ids, Tag.all, :id, :name, include_hidden: false%>
     
  </div>

  <div class="actions">
    <%= f.label 'Create Post'%>
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', posts_path %>
